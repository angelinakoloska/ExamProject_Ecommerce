<!DOCTYPE html>
<html>
<head>
  <title>Roles</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="../stylesheets/style.css">
  <link rel="stylesheet" href="/stylesheets/tables.css">
</head>
<body>
  <%- include('./partials/navbar.ejs') %>
    <h1>Roles</h1>
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Options</th>
      </tr>
    </thead>
    <tbody>
      <% roles.forEach(function(role) { %>
      <tr>
        <td><%= role.id %></td>
        <td><%= role.name %></td>
        <td class="text-center">
          <button class="btn-sm btn-warning" onclick="editCategory('http://localhost:3000/categories', <%= role.Id %>)">Edit</button>
          <button class="btn-sm btn-danger" onclick="deleteCategory('http://localhost:3000/categories', <%= role.Id %>)">Delete</button>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  <!-- <script src="../../javascripts/roles.js"></script> -->
</body>
</html>