<!DOCTYPE html>
<html>
<head>
  <title>Categories</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" type="text/css" href="../stylesheets/style.css">
</head>
<body>
  <%- include('./partials/navbar.ejs') %>
    <h1>Categories</h1>
    <div class="bg-success right">
        <button class="btn-success border-0" onclick="addCategory('http://localhost:3000/categories')">Add Category</button>
      </div>

  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Options</th>
      </tr>
    </thead>
    <tbody>
      <% categories.forEach(function(category) { %>
      <tr>
        <td><%= category.id %></td>
        <td><%= category.name %></td>
        <td class="text-center">
          <button class="btn-sm btn-warning" onclick="editCategory('http://localhost:3000/categories', <%= category.id %>)">Edit</button>
          <button class="btn-sm btn-danger" onclick="deleteCategory('http://localhost:3000/categories', <%= category.id %>)">Delete</button>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  <script src="../../javascripts/categories.js"></script>
</body>
</html>